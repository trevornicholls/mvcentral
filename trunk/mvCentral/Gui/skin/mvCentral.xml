<window>
  <id>112011</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <controls>
	<import>common.time.xml</import>
	<import>common.overlays.xml</import>
	
    <control>
      <description>BackGround</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1280</width>
      <height>720</height>
      <texture>hover_my music.png</texture>
    </control>
	    <control>
      <description>BackGround Overlay</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1280</width>
      <height>720</height>
      <texture>mainoverlay.png</texture>
    </control>

    <control>
      <description>mvCentral Hierachy</description>
      <type>label</type>
      <id>10</id>
      <posX>200</posX>
      <posY>14</posY>
      <label>Music Videos | #mvCentral.Hierachy</label>
      <font>mediastream11c</font>
      <textcolor>ffffffff</textcolor>
    </control>
	
	<control>
      <description>Sort Label Overlay</description>
      <type>label</type>
      <id>22</id>
      <posX>1250</posX>
      <posY>600</posY>
      <label>#mvCentral.Sort</label>
	  <align>right</align>
      <font>mediastream28tc</font>
      <textcolor>20ffffff</textcolor>
    </control>

    <control>
      <description>Artist Name</description>
      <type>label</type>
      <id>11</id>
	  <font>font18</font>
	  <textcolor>FF2222FF</textcolor>
      <posX>70</posX>
      <posY>500</posY>
      <label>#mvCentral.ArtistName</label>
    </control>
	
	<control>
      <description>Artist Biography</description>
      <type>textboxscrollup</type>
      <id>12</id>
	  <font>font11</font>
      <posX>70</posX>
      <posY>540</posY>
	  <width>400</width>
	  <height>150</height>
      <label>#mvCentral.ArtistBio</label>
    </control>
	
	<control>
      <description>Artist Image</description>
      <type>image</type>
	  <visible>!control.isvisible(99)</visible>
      <id>13</id>
      <posX>70</posX>
      <posY>250</posY>
	  <width>350</width>
	  <keepaspectratio>true</keepaspectratio>
      <texture flipY="true" diffuse="Thumb_Mask.png">#mvCentral.ArtistImg</texture>
    </control>
	
	<control>
      <description>Video Image</description>
      <type>image</type>
	  <visible>control.isvisible(99)</visible>
      <id>14</id>
      <posX>70</posX>
      <posY>250</posY>
	  <width>350</width>
	  <keepaspectratio>true</keepaspectratio>
      <texture flipY="true" diffuse="Thumb_Mask.png">#mvCentral.VideoImg</texture>
    </control>
	
	<control>
		<description>Dummy label indicating artist/video view</description>
		<type>label</type>
		<id>99</id>
		<posX>0</posX>
		<posY>0</posY>
		<label></label>
	</control>
	
      <control>
      <description>group element</description>
      <type>group</type>
      <visible>!Control.HasFocus(50)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="slide" time="150" start="0,-300">WindowOpen</animation>
      <animation effect="slide" time="250" end="800,0">WindowClose</animation>
      <animation effect="fade" start="0" end="100" time="500" reversible="false">hidden</animation>
      <animation effect="fade" start="100" end="0" time="500" reversible="false">visible</animation>
      <control>
        <description>composite control consisting of a list control and a thumbnail panel</description>
        <type>facadeview</type>
        <id>50</id>
        <control>
          <description>listcontrol</description>
          <type>listcontrol</type>
          <id>50</id>
          <posX>550</posX>
          <posY>250</posY>
          <width>700</width>
		  <height>410</height>
          <onleft>2</onleft>
		  <spinPosX>1200</spinPosX>
		  <spinPosY>650</spinPosY>
          <scrollOffset>4</scrollOffset>
        </control>
        <control>
          <description>playlist listcontrol</description>
          <type>playlistcontrol</type>
          <id>50</id>
          <scrollOffset>2</scrollOffset>
        </control>
      </control>
    </control>

	<control>
      <type>actiongroup</type>
      <description>action menu</description>
      <defaultcontrol>2</defaultcontrol>
      <onexit>0</onexit>
      <buttonX>0</buttonX>
      <buttonY>0</buttonY>
      <buttonwidth>106</buttonwidth>
      <buttonheight>720</buttonheight>
      <textureFocus>Action_focus.png</textureFocus>
      <textureNoFocus>Action_nofocus.png</textureNoFocus>
      <width>400</width>
      <height>500</height>
      <dimColor>00ffffff</dimColor>
      <control>
        <type>image</type>
        <posX>0</posX>
        <posY>218</posY>
        <width>278</width>
        <height>500</height>
        <texture>hiddenmenu_left.png</texture>
        <colorDiffuse>fffffffff</colorDiffuse>
        <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
      </control>
      
  <control>
        <type>group</type>
        <description>group element</description>
        <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
        <posX>15</posX>
        <posY>225</posY>
        <layout>StackLayout</layout>
     
      <control>
        <description>Random</description>
        <type>button</type>
        <id>2</id>
        <onleft>2</onleft>
        <onright>50</onright>
        <onup>4</onup>
        <ondown>3</ondown>
        <label>Play All (Random)</label>
      </control>

	<control>
        <description>Smart Playlists</description>
        <type>button</type>
        <id>3</id>
        <onleft>3</onleft>
        <onright>50</onright>
        <onup>2</onup>
        <ondown>4</ondown>
        <label>Smart Playlists</label>        
      </control>

     <control>
        <description>Playlist</description>
        <type>button</type>
        <id>4</id>
        <onleft>4</onleft>
        <onright>50</onright>
        <onup>3</onup>
        <ondown>2</ondown>
        <label>Playlist</label>
      </control>
     </control>

    <control>
      <description>Video Count</description>
      <type>label</type>
      <id>15</id>
      <posX>10</posX>
      <posY>690</posY>
      <font>font12</font>
       <visible>!Control.HasFocus(50)</visible>
       <label>#mvCentral.TotalVideos</label>
        <animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
    </control>

    <control>
      <description>Artist Count</description>
      <type>label</type>
      <id>16</id>
      <posX>100</posX>
      <posY>690</posY>
      <font>font12</font>
      <label>#mvCentral.TotalArtists</label>
       <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
    </control>



    <control>
      <description>Favorite Vid Static</description>
      <type>fadelabel</type>
      <label>Most Played Video:</label>
	  <font>font11</font>
      <id>1</id>
      <posX>10</posX>
	  <width>200</width>
      <posY>450</posY>
       <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
    </control>
    <control>
      <description>Favorite Vid label</description>
      <type>fadelabel</type>
      <id>17</id>
      <posX>150</posX>
      <posY>450</posY>
      <width>200</width>
      <font>font10</font>
      <label>#mvCentral.MostPlayed</label>
       <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
    </control>
    <control>
      <description>Favorite Vid Image</description>
      <type>image</type>
      <width>180</width>
      <id>18</id>
      <posX>40</posX>
      <posY>340</posY>
      <texture>#mvCentral.MostPlayedThumb</texture>
      <keepaspectratio>yes</keepaspectratio>
       <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
    </control>
    <control>
      <description>Favorite Artist Static</description>
      <type>label</type>
      <label>Most Played Artist:</label>
      <font>font11</font>
	  <id>1</id>
      <posX>10</posX>
      <posY>655</posY>
       <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
    </control>
    <control>
      <description>Favorite Artist</description>
      <type>label</type>
      <label></label>
      <id>19</id>
      <width>500</width>
      <font>font10</font>
      <posX>140</posX>
      <posY>655</posY>
      <label>#mvCentral.FavArtist</label>
       <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
    </control>

    <control>
      <description>Favorite Artist</description>
      <type>image</type>
      <width>180</width>     
      <posX>40</posX>
      <posY>500</posY>
	  <id>20</id>
      <texture>#mvCentral.FavArtistThumb</texture>
      <keepaspectratio>yes</keepaspectratio>     
       <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
    </control>

  </control>

	

  </controls>
</window>